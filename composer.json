{
  "name": "itcig/php-helpers",
  "description": "PHP helper methods",
  "type": "library",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Brad",
      "email": "bash@capinfogroup.com"
    }
  ],
  "repositories": {
    "itcig/phpunit": {
      "type": "vcs",
      "url": "https://github.com/itcig/phpunit.git"
    }
  },
  "autoload": {
    "files": [
      "src/index.php"
    ],
    "psr-4": {
      "Cig\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Cig\\Tests\\": "tests/phpunit"
    }
  },
  "require": {
    "php": "^7.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "^3.6",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
    "itcig/phpunit": "^0.1.1"
  },
  "scripts": {
    "lint": "./vendor/bin/phpcbf --report=summary --standard=phpcs.xml.dist",
    "phpcs": "./vendor/bin/phpcs --report=summary --standard=phpcs.xml.dist",
    "stage": "composer phpcs && composer test",
    "test": "./vendor/bin/phpunit",
    "install-codestandards": [
      "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
    ],
    "post-install-cmd": [
      "@install-codestandards"
    ]
  }
}
