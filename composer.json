{
	"name": "itcig/php-helpers",
	"version": "1.5.1",
	"description": "PHP helper methods",
	"type": "library",
	"homepage": "https://github.com/itcig/phpunit",
	"license": "MIT",
	"authors": [
		{
			"name": "ITCIG",
			"email": "it@capinfogroup.com",
			"homepage": "https://github.com/itcig"
		}
	],
	"support": {
		"issues": "https://github.com/itcig/php-helpers/issues",
		"source": "https://github.com/itcig/php-helpers"
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"sort-packages": true,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"repositories": [],
	"require": {
		"php": "^7.2 || ^8.0"
	},
	"require-dev": {
		"itcig/php-coding-standards": "^0.5",
		"itcig/phpunit": "^0.5"
	},
	"autoload": {
		"files": [
			"src/index.php"
		],
		"psr-4": {
			"Cig\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Cig\\Tests\\": "tests/phpunit"
		}
	},
	"extra": {
		"branch-alias": {
			"dev-main": "1.5.x-dev"
		}
	},
	"scripts": {
		"phpcs:changed": [
			"Composer\\Config::disableProcessTimeout",
			"phpcs-changed -s --git"
		],
		"phpcs:fix": [
			"Composer\\Config::disableProcessTimeout",
			"./vendor/bin/phpcbf --standard=./phpcs.xml.dist"
		],
		"phpcs:compatibility": [
			"@phpcs:lint --standard=./phpcs.xml.dist"
		],
		"phpcs:lint": [
			"Composer\\Config::disableProcessTimeout",
			"./vendor/bin/phpcs -ps"
		],
		"phpcs:lint:errors": [
			"@phpcs:lint --runtime-set ignore_warnings_on_exit 1"
		],
		"phpunit": [
			"./vendor/bin/phpunit --colors=always"
		],
		"test-coverage": [
			"phpdbg -d memory_limit=2048M -d max_execution_time=900 -qrr ./vendor/bin/phpunit --coverage-clover \"$COVERAGE_DIR/clover.xml\""
		],
		"test": [
			"@composer phpunit"
		]
	}
}
